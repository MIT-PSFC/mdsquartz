{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python Debugger: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "env": {
                "MDS_PATH": "${workspaceFolder};$MDS_PATH",
                "default_tree_path":"${workspaceFolder}/trees/~t",
                "PYTHONPATH":"${workspaceFolder}/usr-local-mdsplus-debug/python:$PYTHONPATH",
                "LD_LIBRARY_PATH":"${workspaceFolder}/usr-local-mdsplus-debug/lib:$LD_LIBRARY_PATH",
            }
        },
    ]
}